{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": false,                          // ✅ Changed from true
    "isolatedModules": true,                   // ✅ Changed from false
    "allowImportingTsExtensions": false,       // ✅ Changed from true
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",                        // ✅ Changed from "./"
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./api/v1/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],                  // ✅ Changed to match your structure
  "exclude": ["node_modules", "dist"]
}